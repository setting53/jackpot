#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, j, head, total = 0, min, diff, pos;
    int visited[100] = {0};

    printf("Enter number of requests: ");
    scanf("%d", &n);

    int request[n];

    printf("Enter the request sequence:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &request[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("\nSequence of head movement:\n");
    printf("%d", head);

    for(i = 0; i < n; i++) {
        min = 9999;
        pos = -1;

        for(j = 0; j < n; j++) {
            if(!visited[j]) {
                diff = abs(request[j] - head);
                if(diff < min) {
                    min = diff;
                    pos = j;
                }
            }
        }

        visited[pos] = 1;
        total += min;
        head = request[pos];
        printf(" -> %d", head);
    }

    printf("\n\nTotal head movement = %d\n", total);
    printf("Average head movement = %.2f\n", (float)total / n);

    return 0;
}
